# Telas
<MainScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Página Principal"
            elevation: 2
            left_action_items: [['menu', lambda x: app.open_nav_drawer()]]
            right_action_items: [['theme-light-dark', lambda x: app.toggle_theme()]]  # Botão tema
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: "120dp"
            padding: "16dp"
            spacing: "8dp"
            MDBoxLayout:
                size_hint: None, None
                size: "80dp", "80dp"
                pos_hint: {"center_x": 0.5}
                FitImage:
                    source: "assets/logo.jpg"
                    radius: [40]
        MDLabel:
            text: 'Via Sacra'
            halign: 'center'
            theme_text_color: "Secondary"
            font_style: "H5"

<IntroScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Introdução"
            elevation: 2
            left_action_items: [['menu', lambda x: app.open_nav_drawer()]]
            right_action_items: [['theme-light-dark', lambda x: app.toggle_theme()]]  # Botão tema
        MDLabel:
            text: "Texto da Introdução"
            halign: 'center'
            theme_text_color: "Secondary"

<EstacaoScreen>:
    md_bg_color: app.theme_cls.bg_normal  
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            id: top_app_bar
            title: root.station_station
            elevation: 2
            left_action_items: [['menu', lambda x: app.open_nav_drawer()]]
            right_action_items: [['arrow-left', lambda x: app.prev_screen()],['arrow-right', lambda x: app.next_screen()],['theme-light-dark', lambda x: app.toggle_theme()]]  # Setas + botão tema
            md_bg_color: app.theme_cls.primary_color
        MDBoxLayout:
            orientation: 'vertical'
            MDLabel:
                text: root.station_titre
                halign: 'center'
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                font_style: "H5"
                spacing: "5dp"
                size_hint_y: None
                font_name: "fontes/Roboto_condensed-ExtraBold.ttf"
                height: self.texture_size[1]
                line_height: 1.5
                mipmap: True  # Melhora qualidade do texto em diferentes escalas
            Image:
                source: root.station_image
                size_hint_y: None
                height: "200dp"
                allow_stretch: True
                keep_ratio: True
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            # Alinhamento
      
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                padding: "16dp"
                spacing: "16dp"
                MDLabel:
                    text: root.station_text_texto_moderador
                    halign: 'left'
                    theme_text_color: "Error"
                    size_hint_y: None
                    height: self.texture_size[1]
                MDLabel:
                    text: root.station_text_texto_resp
                    halign: 'left'
                    theme_text_color: "Error"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: root.station_text_texto_um
                    halign: 'justify'
                    theme_text_color: "Custom"
                    text_color: (1, 1, 1, 1) if app.theme_cls.theme_style == "Dark" else (0, 0, 0, 1)
                    font_name: "fontes/Roboto-Italic.ttf"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: root.station_text_texto_dois
                    halign: 'justify'
                    theme_text_color: "Custom"
                    text_color: (1, 1, 1, 1) if app.theme_cls.theme_style == "Dark" else (0, 0, 0, 1)
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: root.station_text_texto_tres
                    halign: 'justify'
                    font_name: "fontes/Roboto-SemiBold.ttf"
                    theme_text_color: "Custom"
                    text_color: (1, 1, 1, 1) if app.theme_cls.theme_style == "Dark" else (0, 0, 0, 1)
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: root.station_text_texto_oration
                    halign: 'justify'
                    theme_text_color: "Error"
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding: "0dp", "16dp"

<ConclusaoScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Conclusão"
            elevation: 2
            left_action_items: [['menu', lambda x: app.open_nav_drawer()]]
            right_action_items: [['theme-light-dark', lambda x: app.toggle_theme()]]  # Botão tema
        MDLabel:
            text: "Texto da Conclusão"
            halign: 'justify'
            theme_text_color: "Secondary"
